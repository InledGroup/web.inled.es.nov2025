---
interface Product {
  icon: string;
  name: string;
  description: string;
  link: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  products: Product[];
}

const { title, subtitle, products } = Astro.props;
---

<section class="products-section">
  <div class="section-container">
    {title && (
      <div class="section-header">
        {subtitle && <p class="subtitle">{subtitle}</p>}
        <h2 class="section-title">{title}</h2>
      </div>
    )}

    <div class="products-grid">
      {products.map((product, index) => (
        <a href={product.link} class="product-card" data-index={index}>
          <div class="product-icon"><img src={product.icon}></div>
          <h3 class="product-name">{product.name}</h3>
          <p class="product-description">{product.description}</p>
          <div class="product-link-hover">
            Explorar →
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .products-section {
    position: relative;
    background: #000;
    padding: 8rem 2rem;
    overflow: hidden;
  }

  .products-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('https://hosted.inled.es/better.inled.svg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    filter: brightness(0.7);
    z-index: 0;
    pointer-events: none;
  }

  .products-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.2) 0%,
      rgba(0, 0, 0, 0.4) 100%
    );
    z-index: 0;
    pointer-events: none;
  }

  .section-container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .subtitle {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #888;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    color: #fff;
    line-height: 1.2;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    padding: 1rem 0;
  }

  .product-card {
    position: relative;
    padding: 3rem 2rem;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1rem;
    text-decoration: none;
    color: white;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
    transform: translateY(30px);
    cursor: pointer;
  }

  .product-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  .product-card:hover::before {
    opacity: 1;
  }

  .product-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #fff, transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .product-card:hover::after {
    opacity: 0.5;
  }

  .product-card:hover {
    transform: translateY(-10px);
    border-color: rgba(255, 255, 255, 0.3);
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
  }

  .product-icon {
    width: 64px;
    height: 64px;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 1;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .product-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .product-card:hover .product-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .product-name {
    font-size: 1.5rem;
    font-weight: 400;
    color: #fff;
    margin-bottom: 1rem;
    line-height: 1.3;
    position: relative;
    z-index: 1;
  }

  .product-description {
    font-size: 1rem;
    line-height: 1.6;
    color: #999;
    font-weight: 300;
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 1;
  }

  .product-link-hover {
    font-size: 0.875rem;
    color: #fff;
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
    position: relative;
    z-index: 1;
    font-weight: 400;
    letter-spacing: 0.05em;
  }

  .product-card:hover .product-link-hover {
    opacity: 1;
    transform: translateX(0);
  }

  @media (max-width: 768px) {
    .products-section {
      padding: 4rem 1rem;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .product-card {
      padding: 2rem 1.5rem;
    }

    .product-icon {
      font-size: 2.5rem;
    }

    .product-name {
      font-size: 1.25rem;
    }

    .product-description {
      font-size: 0.875rem;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  function initProductsGrid() {
    const cards = document.querySelectorAll('.product-card');

    if (!cards.length) return;

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          const card = entry.target as HTMLElement;
          const delay = parseInt(card.dataset.index || '0') * 100;

          setTimeout(() => {
            card.classList.add('visible');
          }, delay);

          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    cards.forEach(card => observer.observe(card));
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initProductsGrid);
  } else {
    initProductsGrid();
  }

  // Re-inicializar si hay navegación con View Transitions
  document.addEventListener('astro:page-load', initProductsGrid);
</script>
