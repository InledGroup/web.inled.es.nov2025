      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
  <div class="iframe-container">
    <iframe src="/newsletter-frame" title="Newsletter Subscription" frameborder="0" scrolling="no"></iframe>
  </div>
</div>

<script>
  const notification = document.getElementById('newsletter-notification');
  const closeButton = document.getElementById('close-notification');

  // Show notification after 4 seconds
  setTimeout(() => {
    // Check session storage
    const isClosed = sessionStorage.getItem('newsletterClosed');
    if (notification && !isClosed) {
      notification.classList.add('visible');
    }
  }, 4000);

  // Close notification
  closeButton?.addEventListener('click', () => {
    if (notification) {
      notification.classList.remove('visible');
      // Remember preference for session
      sessionStorage.setItem('newsletterClosed', 'true');
    }
  });
</script>

<style>
  .notification-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 90%;
