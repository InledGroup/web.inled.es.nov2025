        function updateLanguage(lang) {
            const elements = document.querySelectorAll('[data-i18n]');
            elements.forEach(el => {
                const key = el.getAttribute('data-i18n');
                if (translations[lang] && translations[lang][key]) {
                    if (el.getAttribute('data-i18n-html') === 'true') {
                        el.innerHTML = translations[lang][key];
                    } else {
                        el.innerText = translations[lang][key];
                    }
                }
            });
            document.documentElement.lang = lang;
        }

        // Close notice logic
        const notice = document.getElementById('name-notice');
        const closeBtn = document.getElementById('close-notice');
        const navbar = document.querySelector('.navbar');
        
        if (notice && closeBtn) {
            // Check if already closed in this session
            if (sessionStorage.getItem('notice-closed') === 'true') {
                notice.style.display = 'none';
                if (navbar) navbar.style.marginTop = '0';
            } else {
                closeBtn.addEventListener('click', () => {
                    notice.style.opacity = '0';
                    setTimeout(() => {
                        notice.style.display = 'none';
                        if (navbar) navbar.style.marginTop = '0';
                        sessionStorage.setItem('notice-closed', 'true');
                    }, 300);
                });
            }
        }

        // Scroll Animation Observer
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-up').forEach(el => {
            observer.observe(el);
        });

        // Smooth Scroll for Anchor Links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
                if (targetId) {
                    document.querySelector(targetId)?.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Handle URL parameter ?en for translation
        const langSwitch = document.getElementById('lang-switch');
        const urlParams = new URLSearchParams(window.location.search);

        if (langSwitch) {
            if (urlParams.has('en')) {
                langSwitch.classList.add('active');
                updateLanguage('en');
            }

            langSwitch.addEventListener('click', () => {
                if (urlParams.has('en')) {
                    // Switch to ES
                    urlParams.delete('en');
                    updateLanguage('es');
                } else {
                    // Switch to EN
                    urlParams.set('en', '');
                    updateLanguage('en');
                }
                // Update URL without reloading
                window.history.replaceState({}, '', `${window.location.pathname}${urlParams.toString() ? '?' + urlParams.toString() : ''}`);
                
                // Toggle active state on button
                if (urlParams.has('en')) {
                    langSwitch.classList.add('active');
                } else {
                    langSwitch.classList.remove('active');
                }
            });
        }

        // Hero Fade Out on Scroll
        window.addEventListener('scroll', () => {
            const scrollPosition = window.scrollY;
            const heroText = document.querySelector('.hero-text');
            
            if (heroText) {
                // Disable transition during scroll to prevent lag
                // We check if it has the inline style for transition 'none' yet
                if (!heroText.style.transition && heroText.classList.contains('visible')) {
                     // We can't just check style.transition because it might be computed.
                     // But we can force it if we are scrolling.
                     heroText.style.transition = 'none';
                }
                
                // Start fading immediately, fully transparent by 400px
                const opacity = 1 - (scrollPosition / 400);
                heroText.style.opacity = Math.max(0, opacity).toString();
                // Move it up slightly faster than scroll to give a "leaving" feel
                heroText.style.transform = `translateY(${scrollPosition * 0.4}px)`;
            }
        });
