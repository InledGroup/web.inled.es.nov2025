---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { appsData } from '../../config/apps_full';
import { marked } from 'marked';

export const prerender = true;

export async function getStaticPaths() {
  return appsData
    .filter(app => app.id !== 'tabnest' && app.id !== 'demo')
    .map(app => ({
    params: { id: app.id },
    props: { app },
  }));
}

const { app } = Astro.props;
const content = await marked.parse(app.description);
---

<Layout title={`${app.title} - Inled Apps`} description={app.shortDescription}>
  <Header />
  
  <div class="app-page">
    <div class="app-header">
      <div class="container header-content">
        <div class="app-icon">
          {app.icon && <img src={app.icon} alt={`${app.title} icon`} />}
        </div>
        <div class="app-info">
          <h1>{app.title}</h1>
          <p class="short-desc">{app.shortDescription}</p>
          
          {app.notice && (
            <div class={`notice-banner ${app.notice.type}`}>
              <div class="notice-icon">
                {app.notice.type === 'warning' ? (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
                ) : (
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>
                )}
              </div>
              <p>{app.notice.message}</p>
            </div>
          )}

          <div class="platforms">
            {app.platform.map(p => <span class="badge">{p}</span>)}
          </div>
          <div class="download-buttons">
            {app.downloads.github && (
              <a href={app.downloads.github} class="btn primary">
                Descargar (GitHub)
              </a>
            )}
             {app.downloads.sourceforge && (
              <a href={app.downloads.sourceforge} class="btn secondary">
                Descargar (SourceForge)
              </a>
            )}
             {app.downloads.sourceCode && (
              <a href={app.downloads.sourceCode} class="btn text">
                Ver CÃ³digo Fuente
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <div class="container main-content">
      <div class="content-grid">
        <div class="description-column">
             <div class="markdown-body" set:html={content} />
        </div>
        
        <div class="media-column">
            {app.video && (
                <div class="video-container">
                    <iframe 
                        src={app.video} 
                        title="YouTube video player" 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen>
                    </iframe>
                </div>
            )}

            {app.screenshots && app.screenshots.length > 0 && (
                <div class="screenshots">
                    <h3>Capturas</h3>
                    <div class="screenshot-grid">
                        {app.screenshots.map(src => (
                            <img src={src} alt={`Screenshot of ${app.title}`} loading="lazy" />
                        ))}
                    </div>
                </div>
            )}
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .app-page {
    position: relative;
    padding-top: 100px;
    min-height: 100vh;
    background: #000;
    color: white;
    overflow: hidden;
  }

  .app-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('https://hosted.inled.es/better.inled.svg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    filter: brightness(0.5);
    z-index: 0;
    pointer-events: none;
  }

  .container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .app-header {
    position: relative;
    z-index: 2;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4rem 0;
    margin-bottom: 4rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .app-icon img {
    width: 128px;
    height: 128px;
    border-radius: 24px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
  }

  .app-info h1 {
    font-size: 3rem;
    margin: 0 0 1rem 0;
    font-weight: 800;
  }

  .short-desc {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1.5rem;
    max-width: 600px;
  }

  .notice-banner {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    font-size: 0.95rem;
    line-height: 1.5;
    max-width: 800px;
  }

  .notice-banner.warning {
    background: rgba(255, 193, 7, 0.1);
    border: 1px solid rgba(255, 193, 7, 0.3);
    color: #ffc107;
  }

  .notice-banner.info {
    background: rgba(33, 150, 243, 0.1);
    border: 1px solid rgba(33, 150, 243, 0.3);
    color: #2196f3;
  }

  .notice-icon {
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  .platforms {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .badge {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .download-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .btn.primary {
    background: white;
    color: black;
  }

  .btn.primary:hover {
    background: #ddd;
    transform: translateY(-2px);
  }

  .btn.secondary {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
  }

  .btn.secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: white;
  }

  .btn.text {
    color: rgba(255, 255, 255, 0.7);
    padding-left: 0;
  }
  
  .btn.text:hover {
    color: white;
    text-decoration: underline;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 4rem;
    padding-bottom: 4rem;
  }

  .markdown-body {
    font-size: 1.1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
  }

  .markdown-body :global(h1),
  .markdown-body :global(h2),
  .markdown-body :global(h3) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: white;
  }

  .markdown-body :global(a) {
    color: #fff;
    text-decoration: underline;
  }

  .markdown-body :global(ul) {
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .markdown-body :global(pre) {
    background: rgba(0,0,0,0.3);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid rgba(255,255,255,0.1);
  }

  .media-column {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    background: black;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .screenshots h3 {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .screenshot-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .screenshot-grid img {
    width: 100%;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transition: transform 0.3s ease;
  }

  .screenshot-grid img:hover {
    transform: scale(1.02);
  }

  @media (max-width: 968px) {
    .header-content {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }
    
    .short-desc {
      margin: 0 auto 1.5rem auto;
    }

    .platforms, .download-buttons {
      justify-content: center;
    }

    .content-grid {
      grid-template-columns: 1fr;
    }

    .media-column {
      order: -1; /* Show video/screenshots above text on mobile? or below? Keep below for flow. */
      order: 0;
    }
  }
</style>
