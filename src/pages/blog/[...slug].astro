---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { getPosts, formatDate } from '../../lib/blogger';
import type { BlogPost } from '../../lib/blogger';

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
---

<Layout title={`${post.title} | Inled Blog`} description={post.title}>
  <Header />
  
  <article class="blog-post">
    <div class="post-hero">
      <div class="container">
        <a href="/blog" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
          Volver al blog
        </a>
        <div class="meta">
          <span class="date">{formatDate(post.published)}</span>
          {post.tags.length > 0 && (
            <>
              <span class="separator">â€¢</span>
              <div class="tags">
                {post.tags.map(tag => <span class="tag">{tag}</span>)}
              </div>
            </>
          )}
        </div>
        <h1 class="post-title">{post.title}</h1>
        <div class="author">
          <span class="by">Por</span> {post.author}
        </div>
      </div>
    </div>

    <div class="post-content">
      <div class="container">
        <div class="content-wrapper" set:html={post.content} />
      </div>
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    position: relative;
    min-height: 100vh;
    background: #000;
    padding-top: 80px;
    overflow-x: hidden;
  }

  /* Background matching ProductsGrid and Hero */
  .blog-post::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('https://hosted.inled.es/better.inled.svg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    opacity: 0.3;
    z-index: 0;
    pointer-events: none;
    filter: blur(10px) brightness(0.8);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .post-hero {
    padding: 6rem 0 4rem;
    text-align: left;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 3rem;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .back-link:hover {
    color: #fff;
    transform: translateX(-5px);
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .date {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.5);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .separator {
    color: rgba(255, 255, 255, 0.2);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    color: #fff;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .post-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 300; /* Matching section-title weight */
    color: #fff;
    line-height: 1.1;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .author {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    font-weight: 300;
  }

  .author .by {
    color: rgba(255, 255, 255, 0.4);
    font-style: italic;
  }

  .post-content {
    padding-bottom: 8rem;
  }

  .content-wrapper {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2rem;
    padding: 4rem;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 300;
    line-height: 1.8;
  }

  @media (max-width: 768px) {
    .content-wrapper {
      padding: 2rem 1.5rem;
      border-radius: 1.5rem;
    }
    
    .post-hero {
        padding: 4rem 0 2rem;
    }
    
    .post-title {
        font-size: 2.5rem;
    }
  }

  /* Global typography for the injected content */
  .content-wrapper :global(p) {
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .content-wrapper :global(h2) {
    font-size: 2rem;
    color: #fff;
    margin: 4rem 0 1.5rem;
    font-weight: 400;
  }

  .content-wrapper :global(h3) {
    font-size: 1.5rem;
    color: #fff;
    margin: 3rem 0 1.25rem;
    font-weight: 400;
  }

  .content-wrapper :global(a) {
    color: #fff;
    text-decoration: underline;
    text-decoration-color: rgba(255, 255, 255, 0.3);
    text-underline-offset: 4px;
    transition: all 0.3s ease;
  }

  .content-wrapper :global(a:hover) {
    text-decoration-color: #fff;
  }

  .content-wrapper :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 1rem;
    margin: 3rem 0;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
  }

  .content-wrapper :global(ul), .content-wrapper :global(ol) {
    margin-bottom: 2rem;
    padding-left: 1.5rem;
  }

  .content-wrapper :global(li) {
    margin-bottom: 0.75rem;
  }

  .content-wrapper :global(blockquote) {
    border-left: 2px solid #fff;
    padding: 1rem 0 1rem 2rem;
    margin: 3rem 0;
    font-style: italic;
    color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.03);
    border-radius: 0 1rem 1rem 0;
  }
</style>